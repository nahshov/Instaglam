{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "func-names": 0,
    "consistent-return": "off",
    "global-require": "off",
    "no-plusplus": "off"
  }
}
